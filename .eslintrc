{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "window": true,
    "document": true,
    "localStorage": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["babel", "prettier", "jest", "react-hooks", "jsx-a11y"],
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": 0,
    "comma-dangle": 0,
    "arrow-parens": 0,
    "no-unused-vars": 0,
    "no-throw-literal": 0,
    "camelcase": 0,
    "eqeqeq": 0,
    "no-plusplus": 0,
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "import/prefer-default-export": 0,
    "class-methods-use-this": "off",
    "no-nested-ternary": 0,
    "no-prototype-builtins": 0,
    "no-console": "off",
    "no-continue": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
